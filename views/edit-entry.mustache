<html lang="en">

<head>
{{>header}}
</head>


<body class="container">

<h1 class="display-4">{{title}}</h1>
<h2 class="display-4">Edit </h2> 


<form method="post" role="form" >   
{{#item}}
  <div class="form-group">
    <label for="todo">todo: </label> 
    <input type="text" class="form-control-plaintext" id="todo" name="todo" value="{{todo}}" readonly>
  </div>
<div class="form-group">
    <label for="notes">Notes: </label> 
    <input type="text" class="form-control-plaintext" id="notes" name="notes" value="{{notes}}" >
  </div>

   <div class="form-group">
    <label for="status">status</label>
    <input type="radio" name="status" id="status" value="true"{{#status}}checked{{/status}}>complete
    <input type="radio" name="status" id="status" value="false" {{^status}}checked{{/status}}>to be completed
  </div>

  <div class="form-group">
    <input type="submit" value="Save details" class="btn btn-primary">
  </div>
{{/item}}
</form>
</body>
</html>